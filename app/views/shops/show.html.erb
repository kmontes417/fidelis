<div class="container justify-content-center" >
  <%= @shop.photo %>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="shop-wrapper">
        <div class="shop-info">
          <strong><h1><%= @shop.name %></h1></strong>
          <p>Shop owner: <%= @shop.user.first_name.capitalize %> </p>
          <p><%= @shop.address.capitalize %></p>
          <p><%= @shop.category.name %></p>
        </div>

        <div class="description mb-3">
          <h2>Description</h2>
          <p><%= @shop.description.capitalize %>.</p>
        </div>
      </div>
    </div>
  </div>

  <% if @card.any? %>
    <div>
       <%= @card.first.user.first_name.capitalize %>
       <p>star count: <%= @card.first.star_count %> </p>
      <div>
        <% @card.first.star_count.times do %>
          <i class="fa fa-star star" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  <% end %>

</div>



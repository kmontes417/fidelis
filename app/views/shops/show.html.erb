<div class="container justify-content-center" >
  <%= @shop.photo %>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="shop-wrapper">
        <div class="shop-info">
          <strong><h1><%= @shop.name %></h1></strong>
          <p>Shop owner: <%= @shop.user.first_name.capitalize %> </p>
          <p><%= @shop.address.capitalize %></p>
          <p><%= @shop.category.name %></p>
        </div>

        <div class="description mb-3">
          <h2>Description</h2>
          <p><%= @shop.description.capitalize %>.</p>
        </div>
      </div>
    </div>
  </div>

  <div>
    <% @cards.each do |card| %>
     <%= card.user.first_name.capitalize %>
     <p>star count: <%= card.star_count %> </p>
    <div>
      <% card.star_count.times do %>
        <i class="fa fa-star star" aria-hidden="true"></i>
      <% end %>
    </div>
    <% end %>
  </div>

</div>



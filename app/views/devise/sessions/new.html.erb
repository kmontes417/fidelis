<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Fidelis</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'input-field' } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'input-field' } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
          <div class="form-actions">
            <%= f.button :submit, "Login", class: 'search-btn' %>
            <%= f.button :submit, "Create Account", class: 'create-btn' %>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
